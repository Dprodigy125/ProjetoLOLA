<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="0dp"
    android:translationY="-20dp"
    tools:context=".Tela_Logada">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-20dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_login_area" />

    <ScrollView

        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:backgroundTintMode="add"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dadospessoais"
                style="@style/textoII"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="Que bom ver você de novo!"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/dadospessoais3"
                style="@style/textoII"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="Seus dados para o sorteio são:"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="italic"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/dadospessoais2"
                style="@style/textoII"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/dados_pessoais"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/user_email"
                style="@style/Text_Dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/e_mail"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/user_name"
                style="@style/Text_Dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/nome"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/user_nascimento"
                style="@style/Text_Dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/data"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/user_cpf"
                style="@style/Text_Dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/cpf"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView29"
                style="@style/textoII"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/endereco"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/user_cep"
                style="@style/Text_Dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/cep"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/user_cidade"
                style="@style/Text_Dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/cidade"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/user_estado"
                style="@style/Text_Dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/estado"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/user_telefone"
                style="@style/Text_Dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/tel"
                tools:ignore="MissingConstraints" />

        </LinearLayout>
    </ScrollView>

    </android.support.constraint.ConstraintLayout>